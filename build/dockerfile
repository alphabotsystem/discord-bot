FROM python:slim
WORKDIR /app

ENV PROTOCOL_BUFFERS_PYTHON_IMPLEMENTATION=python
RUN apt-get update && apt-get install -y git build-essential

# Install dependencies
COPY ./build/requirements.txt ./
RUN pip install -r ./requirements.txt

RUN git clone https://github.com/alphabotsystem/dependencies.git && cd ./dependencies && git checkout v1.16.2
RUN pip install ./dependencies/py/commands
RUN pip install ./dependencies/py/database
RUN pip install ./dependencies/py/processor
RUN pip install ./dependencies/py/parser
RUN pip install ./dependencies/py/requests
RUN rm -r ./dependencies

# Copy source code
COPY ./app ./

# Run
ENTRYPOINT ["python", "discord_bot.py"]